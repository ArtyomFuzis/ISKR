{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting - отключаем строгие проверки */
    "strict": false,  // было true
    "noUnusedLocals": false,  // было true
    "noUnusedParameters": false,  // было true
    "erasableSyntaxOnly": false,
    "noFallthroughCasesInSwitch": false,  // было true
    "noUncheckedSideEffectImports": false,  // было true
    
    /* Дополнительные опции */
    "allowJs": true,
    "checkJs": false
  },
  "include": ["vite.config.ts"]
}